<script>
function scontrinoFunction() {
  var x = document.getElementById("scontrinoDIV");
  if (x.innerHTML === "Ho lo scontrino") {
    x.innerHTML = "Non ho lo scontrino";
    value ="No";
  } else {
    x.innerHTML = "Ho lo scontrino";
    value ="Sì";
  }
}
function pagaFunction() {
  var x = document.getElementById("pagaDIV");
  if (x.innerHTML === "Io") {
    x.innerHTML = "Cassa";
    value ="Cassa";
  } else {
    x.innerHTML = "Io";
    value ="Io";
  }
}

    function processForm(e) {
		var button = document.getElementById("submit-button");
	   button.innerText = "Inviato";
	   button.classList.add('sent');
		setTimeout(function() {
			form.reset();
		  }, 1000);
	  button.text(function(i, text) {
			return text === "Inviato!" ? "Invia" : "Inviato!";
		});   
	}
		
		var form = document.getElementById('gform');
		if (form.attachEvent) {
			form.attachEvent("submit", processForm);
		} else {
			form.addEventListener("submit", processForm);
		}    
</script>
